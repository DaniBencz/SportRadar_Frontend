{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "max-len": ["error", {
            "code": 120,
            "comments": 150
        }],
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "warn"
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "rules": {
                "react/jsx-filename-extension": "off"
            },
            "env": {
                "jest": true
            }
        }
    ]
}
